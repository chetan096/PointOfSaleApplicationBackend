<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pointofsaleapplication</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.default_schema">pointofsaleapplication</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">none</property>
  <mapping class="com.nagarro.pointofsaleapplication.models.CustomerEO"/>
  <mapping class="com.nagarro.pointofsaleapplication.models.EmployeeEO"/>  
  <mapping class="com.nagarro.pointofsaleapplication.models.OrderEO"/>
  <mapping class="com.nagarro.pointofsaleapplication.models.OrderDetailEO"/>
  <mapping class="com.nagarro.pointofsaleapplication.models.ProductEO"/>
   <mapping class="com.nagarro.pointofsaleapplication.models.CashDrawerEO"/>
 </session-factory>
</hibernate-configuration>
